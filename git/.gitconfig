[user]
	name = Chloe-H
	email = Chloe-H@users.noreply.github.com
[core]
	excludesfile = ~/.gitignore_global
; include only if a remote with the given URL exists (note
; that such a URL may be provided later in a file or in a
; file read after this file is read)
[includeIf "hasconfig:remote.*.url:**/Chloe-H/**"] ; HTTPS
    path = .gitconfigs/.gitconfig.personal
[includeIf "hasconfig:remote.*.url:*Chloe-H/**"] ; SSH
    path = .gitconfigs/.gitconfig.personal
[include] ; Work configurations: It's a separate directory to get around stow
    path = ~/.gitconfigs.work/.gitconfig
